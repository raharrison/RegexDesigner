<Window x:Class="RegexDesigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="420" Width="600">
    <DockPanel LastChildFill="True">
        <TabControl DockPanel.Dock="Right">
            <TabItem Header="Samples"></TabItem>
            <TabItem Header="Saved"></TabItem>
        </TabControl>
        <TabControl>
            <TabItem Header="Match">
                <StackPanel>
                    <GroupBox>
                        <StackPanel>
                            <TextBox Margin="2,5,2,5" Text="Regular expression goes here"></TextBox>
                            <WrapPanel Margin="5,5,5,5" Orientation="Horizontal">
                                <CheckBox Margin="0,0,10,0" Content="Global"></CheckBox>
                                <CheckBox Margin="0,0,10,0" Content="Ignore Case"></CheckBox>
                                <CheckBox Margin="0,0,10,0" Content="Extended"></CheckBox>
                                <CheckBox Margin="0,0,10,0" Content="Dotall"></CheckBox>
                                <CheckBox Margin="0,0,10,0" Content="Multiline"></CheckBox>
                            </WrapPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox>
                        <TextBox MinLines="12" Margin="2,5,2,5" AcceptsReturn="True" Text="Input text goes here"></TextBox>
                    </GroupBox>
                    <GroupBox>
                        <TextBox MinLines="5" Margin="2,5,2,5" AcceptsReturn="True" Text="Information about the match goes here"></TextBox>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Replace">
                <StackPanel>
                    <GroupBox>
                        <StackPanel>
                            <TextBox Margin="2,5,2,5" Text="Regular expression goes here"></TextBox>
                            <WrapPanel Margin="5,5,5,5" Orientation="Horizontal">
                                <CheckBox Margin="0,0,10,0" Content="Global"></CheckBox>
                                <CheckBox Margin="0,0,10,0" Content="Ignore Case"></CheckBox>
                                <CheckBox Margin="0,0,10,0" Content="Extended"></CheckBox>
                                <CheckBox Margin="0,0,10,0" Content="Dotall"></CheckBox>
                                <CheckBox Margin="0,0,10,0" Content="Multiline"></CheckBox>
                            </WrapPanel>
                            <TextBox Margin="2,5,2,15" Text="Replacement text goes here"></TextBox>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox>
                        <StackPanel>
                            <TextBox MinLines="5" Margin="2,5,2,5" AcceptsReturn="True" Text="Input text goes here"></TextBox>
                            <TextBox MinLines="5" Margin="2,5,2,5" AcceptsReturn="True" Text="Output text goes here"></TextBox>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox>
                        <TextBox MinLines="3" Margin="2,5,2,5" AcceptsReturn="True" Text="Information about the match goes here"></TextBox>
                    </GroupBox>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
